<!DOCTYPE html>
<html>
  <head>
  <title><%= t ".framgia_e_learning" %></title>
    <%= stylesheet_link_tag "application", media: "all",
      "data-turbolinks-track": true %>
    <%= javascript_include_tag "application", "data-turbolinks-track": true %>
    <%= csrf_meta_tags %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>
  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to t("views.static_pages.home1"), root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to t("views.layouts.application.linkhome"), root_path %></li>
            <% if logged_in? %>
              <% if current_user.is_admin? %>
                <li><%= link_to t("views.layouts.manager"), admin_root_path %></li>
              <% end %>
              <li><%= link_to t("views.layouts.users"), users_path %></li>
              <li><%= link_to t("views.layouts.categories"), categories_path %></li>
              <li><%= link_to t("views.layouts.word_list"), words_path %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= current_user.name %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to t("views.layouts.user_profile"), current_user %></li>
                  <li><%= link_to t("views.layouts.user_edit"),
                    edit_user_path(current_user) %>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to t("views.layouts.logout"), logout_path, method: :delete  %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to t("views.layouts.application.link.login"),
                login_path %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
      <%= debug(params) if Rails.env.development? %>
    </div>
    <div class="footer navbar-fixed-bottom">
      <%= t "views.static_pages.application.footer" %>
    </div>
  </body>
</html>
