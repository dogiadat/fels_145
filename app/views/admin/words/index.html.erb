<div class="panel panel-heading">
  <h1><%= t ".word_list" %></h1>
</div>
<div class="panel">
  <div class="form-inline center">
    <%= form_tag "", method: :get do %>
      <%= select_tag :by_category,
        options_from_collection_for_select(@categories, :id, :name, params[:by_category]),
          include_blank: t(".all"), class: "form-control" %>
      <% Settings.word_list.each do |option| %>
        <%= radio_button_tag :word_type, option,
          params[:word_type] == option %>
        <%= t ".#{option}" %>
      <% end %>
      <%= submit_tag t("views.word_lists.search"), class: "btn btn-success" %>
    <% end %>
  </div>
</div>
<div class="panel panel-body col-md-4 col-md-offset-4">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t ".words" %></th>
        <th><%= t ".meaning" %></th>
        <th><%= t ".action" %></th>
      </tr>
    </thead>
    <tbody>
      <% @words.each do |word| %>
        <tr>
          <td><%= word.content %></td>
          <td>
            <% word.word_answers.each do |answer| %>
              <%= answer.content if answer.is_correct? %>
            <% end %>
          </td>
          <td>
            <%= link_to t(".edit"), edit_admin_category_word_path(word.category.id, word) %>
            <%= link_to t(".delete"), [:admin, word.category, word],
              method: :delete,
              data: {confirm: t("views.categories.show.confirm_delete")} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @words %>
</div>
<div class="clearfix"></div>
