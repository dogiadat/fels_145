<%= form_for [@category, @word] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.hidden_field :category_id, value: @category.id %>
  <%= f.label :content %>
  </br>
  <%= f.text_field :content %>
  </br>
  <%= f.label :word_answers, t(".answers") %>
  <%= f.fields_for :word_answers do |builder| %>
    <fieldset>
      <%= builder.text_field :content %>
      <%= builder.check_box :is_correct %>
      <%= builder.hidden_field :_destroy %>
    </fieldset>
  <% end %>
  <%= link_to_add_fields t(".add_answers"), f, :word_answers %>
  </br>
  </br>
    <%= f.submit t("views.words.new.add_word"),
      class: "btn btn-primary" %>
<% end %>
